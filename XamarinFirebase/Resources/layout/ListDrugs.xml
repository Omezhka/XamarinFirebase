<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingTop="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5">

        <TextView
            android:id="@+id/nameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Какой-то препарат"
            android:textStyle="bold"
            android:textSize="18sp"
        />

        <TextView
            android:id="@+id/activeSubstanceText"
            android:layout_width="wrap_content"
            android:layout_height="26.5dp"
            android:text="Какое-то действующее вещество"
            android:layout_below="@id/nameText"
            android:paddingTop="-5dp"
        />

        <TextView
            android:id="@+id/formText"
            android:text="Какая-то форма"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
        />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5">

        <TextView
            android:id="@+id/status"
            android:text="Группа препарата:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
        
        />

        <TextView
            android:id="@+id/groupText"
            android:text="какая-то группа"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="6dp"
            android:layout_toRightOf="@id/status"
            android:layout_marginLeft = "4dp"
            android:textStyle="bold"
        />

        <ImageView
            android:id="@+id/deleteButton"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/icons_delete_50"
            android:tint="#a000a0"
            android:padding="4dp"
            android:layout_marginBottom="6dp"
        />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e2e2e2"
            android:layout_alignParentBottom="true"
        />
        

    </RelativeLayout>


</LinearLayout>
